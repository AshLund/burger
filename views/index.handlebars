
<header>
<h1> Eat Da Burger! </h1> <img src="../assets/img/burger.png" width="100">
</header>


<div class="row">
    <div class="col-md-6">

<h2> Burgers! </h2>

  <ul>
  {{#each burgers}}
    {{#unless devoured}}

  <li class="form-control">{{id}} - {{this.burger_name}}</li>

	<button class="devour" data-id="{{this.id}}" data-newDevoured="{{devoured}}"> DEVOUR! </button>

          {{/unless}}
        {{/each}}

      </div>
      </ul>

    <div class="col-md-6">
<h2>Devoured Burgers!</h2>


<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li class="form-control">
  {{this.id}} - {{this.burger_name}}
  </li>
  <button type="button" id="deleteBurger" data-id="{{this.id}}"> Delete </button>
  {{/if}}
  {{/each}}

</ul>
</div>
</div>



<h2> Add a Burger to Eat </h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger_name"> New Burger </label>
    <input type="text" id="burger_name" name="burger">
  <button type="submit">Add Burger </button>
   </div>
</form>



 